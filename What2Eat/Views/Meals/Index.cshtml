@model IEnumerable<What2Eat.Models.Meal>

@{
    ViewBag.Title = "Index";
}
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { data_modal = "" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MealCategory)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MealCategory)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.MealId }, new { data_modal = "" }) |
            @Html.ActionLink("Details", "Details", new { id = item.MealId }, new { data_modal = "" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.MealId }, new { data_modal = "" })
        </td>
    </tr>
}

</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modalform")
}
