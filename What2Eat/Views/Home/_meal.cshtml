@model What2Eat.Models.MealViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Your Meal</h4>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body">

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div>
                <h4>MealViewModel</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TotalKcal)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TotalKcal)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TotalProteins)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TotalProteins)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TotalCarbonites)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TotalCarbonites)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TotalFat)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TotalFat)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TotalWeight)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TotalWeight)
                    </dd>

                </dl>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button class="btn" data-dismiss="modal">Cancel</button>
        <input class="btn btn-primary" type="submit" value="Save" />
    </div>
}

