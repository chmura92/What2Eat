@model IEnumerable<What2Eat.Models.Product>

@{
    ViewBag.Title = "Index";
}
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create",null, new { data_modal=""})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductKind)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KcalPer100g)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProteinsPer100g)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarbonitesPer100g)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FatPer100g)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductKind)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KcalPer100g)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProteinsPer100g)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CarbonitesPer100g)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FatPer100g)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ProductId }, new { data_modal=""}) |
            @Html.ActionLink("Details", "Details", new { id = item.ProductId }, new { data_modal = "" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ProductId }, new { data_modal = "" })
        </td>
    </tr>
}

</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modalform")
}